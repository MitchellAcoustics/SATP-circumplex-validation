  keywords  = {Psychoacoustics, Sound quality, annoyance, artificial neural networks, electric vehicle, prediction},
  publisher = {Elsevier {BV}},
  url       = {https://www.sciencedirect.com/science/article/pii/S0003682X18304328?dgcid=rss{\_}sd{\_}all},
