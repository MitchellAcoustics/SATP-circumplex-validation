@InProceedings{AlmagroPastor2019Soundscape,
  author    = {{Almagro Pastor}, Jos{\'{e}} Antonio and {Vida Manzano}, Jer{\'{o}}nimo and {Garc{\'{i}}a Quesada}, Rafael},
