@Article{Smith2020Impacts,
  author    = {Smith, Lauren M. and Wang, Linyan and Mazur, Kuba and Carchia, Michael and DePalma, Glen and Azimi, Reza and Mravca, Samantha and Neitzel, Richard L.},
