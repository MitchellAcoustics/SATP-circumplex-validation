@Article{ReyGozalo2018Relationships,
  author    = {{Rey Gozalo}, Guillermo and {Barrig{\'{o}}n Morillas}, Juan Miguel and {Montes Gonz{\'{a}}lez}, David and {Atanasio Moraga}, Pedro},
