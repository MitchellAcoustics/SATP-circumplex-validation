@Article{Hua2005Optimal,
  author   = {Hua, Jianping and Xiong, Zixiang and Lowey, James and Suh, Edward and Dougherty, Edward R.},
  journal  = {Bioinformatics},
  title    = {{Optimal number of features as a function of sample size for various classification rules}},
  year     = {2005},
