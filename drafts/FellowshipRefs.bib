@Article{Logie2012Acoustical,
  author   = {Logie, Shona Mary},
  title    = {{An Acoustical Study of the Playing Characteristics of Brass Wind Instruments}},
  year     = {2012},
  number   = {August},
  pages    = {181},
  abstract = {When assessing the quality of a brass instrument the player must consider$\backslash$na number of factors, the main consideration being the playability$\backslash$nof the chosen instrument. The playability of an instrument is a broad$\backslash$nterm used to describe how well the instrument plays; this includes$\backslash$nhow in tune the resonant modes are, how easy it is to start and move$\backslash$nbetween notes, how easy it is to bend notes and the degree of spectral$\backslash$nenrichment during a crescendo that is able to be produced.$\backslash$n$\backslash$n$\backslash$nThe starting transient is known to be of crucial importance for both$\backslash$nthe musician and listener, and previous work in the field has been$\backslash$nmainly concerned with such starting transients; this work focusses$\backslash$non inter-note transitions. Transitions between notes include both$\backslash$nstarting and finishing transients as the initial note is ended and$\backslash$nthe next begun. Using high speed photography images synchronised$\backslash$nwith pressure signals from the mouthpiece and bell end, the inter-note$\backslash$ntransitions are explored. Results from these experiments are compared$\backslash$nwith those from a simple one dimensional time domain model.$\backslash$n$\backslash$n$\backslash$nOther techniques used to determine the playability of a specific instrument$\backslash$ninclude the rate at which the instrument timbre becomes ‘brassy'$\backslash$ndue to nonlinear effects, that are a consequence of loud playing.$\backslash$nThe relative significance of viscothermal wall losses and nonlinear$\backslash$neffects within realistic brass instruments have been explored here$\backslash$nusing experiments on cylindrical tubes of different internal diameters.$\backslash$nThese experimental results are compared with results from a computational$\backslash$nmodel that uses weakly nonlinear wave propagation theory and includes$\backslash$nviscothermal losses. It is also possible on some brass instruments,$\backslash$nwhen playing loudly, to achieve what are known as super high notes;$\backslash$nthese notes are above the frequency where the instrument has well$\backslash$ndefined resonances. Experimental results are presented here using$\backslash$noptical techniques to visualise the motion of the player's lips during$\backslash$nplaying of these super high notes.},
  url      = {http://files/405/Logie - An Acoustical Study of the Playing Characteristics.pdf},
}

@Article{Lopatka2016Detection,
  author    = {Lopatka, K. and Kotus, J. and Czyzewski, A.},
  journal   = {Multimedia Tools and Applications},
  title     = {{Detection, classification and localization of acoustic events in the presence of background noise for acoustic surveillance of hazardous situations}},
  year      = {2016},
  issn      = {1380-7501},
  month     = jul,
  number    = {17},
  pages     = {10407--10439},
  volume    = {75},
  abstract  = {Evaluation of sound event detection, classification and localization of hazardous acoustic events in the presence of background noise of different types and changing intensities is presented. The methods for discerning between the events being in focus and the acoustic background are introduced. The classifier, based on a Support Vector Machine algorithm, is described. The set of features and samples used for the training of the classifier are introduced. The sound source localization algorithm based on the analysis of multichannel signals from the Acoustic Vector Sensor is presented. The methods are evaluated in an experiment conducted in the anechoic chamber, in which the representative events are played together with noise of differing intensity. The results of detection, classification and localization accuracy with respect to the Signal to Noise Ratio are discussed. The results show that the recognition and localization accuracy are strongly dependent on the acoustic conditions. We also found that the engineered algorithms provide a sufficient robustness in moderately intense noise in order to be applied to practical audio-visual surveillance systems.},
