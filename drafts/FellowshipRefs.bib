@Article{Genuit2006Dynamic,
  author   = {Genuit, Klaus and Bray, Wade},
  journal  = {Noise Control and Acoustics},
  title    = {{Dynamic Acoustic Measurement Techniques Considering Human Perception}},
  year     = {2006},
  issn     = {0739-3717},
  number   = {June 2008},
  pages    = {61--67},
  volume   = {2006},
  abstract = {Dynamic measurement implies determining the content of signals having$\backslash$nspectral structure and energy changing with time, sometimes on very$\backslash$nshort time scales. Dynamic measurements can present challenges to$\backslash$ndetermine sufficient information in both the time and frequency domains.$\backslash$nHigh resolution in frequency prevents finding short-term peak levels and$\backslash$nrecognizing true crest factors, and vice versa. The human ear/brain$\backslash$nsystem exceeds the simultaneous time and frequency recognition of$\backslash$nconventional measurement methods, further complicating the challenge.$\backslash$nPeople have at least three times better time/frequency resolution than$\backslash$nthe familiar Fourier transform moved across the time axis, although$\backslash$nquite often a compromise block size can be found that gives$\backslash$ntime/frequency measurement agreeing with human sound perception of both$\backslash$nfactors. Unlike technical measuring systems, human hearing is also very$\backslash$nsensitive to patterns. The presence of tones, varying tones ( amplitude$\backslash$nand/or frequency), clicks, rattles, splashing sounds, etc., even at low$\backslash$nlevels in the presence of other less structured noise of considerably$\backslash$nhigher level, can dominate perception. Human consciousness effectively$\backslash$nperforms the opposite of averaging, ignoring the absolute value of$\backslash$nslowly varying or stationary signals and focusing on things differing at$\backslash$nshort time bases from their surroundings in both time and frequency. In$\backslash$ndynamic measurement, it can be difficult to withdraw an important$\backslash$npattern from the absolute whole. Case studies will be given comparing$\backslash$nconventional techniques with three high-resolution time/frequency$\backslash$nmethods useful in general engineering although developed to model the$\backslash$nprocesses of human sound perception: a hearing model with very rapid$\backslash$ntime resolution at all frequencies (Sottek, R., 1993, ``Modelle zur$\backslash$nSignalverarbeitung im menschlichen Gehor,{\{}''{\}} dissertation, RWTH$\backslash$nAachen), a relative ( pattern) measurement technique subtracting a$\backslash$nsliding average in both time and frequency from a running instantaneous$\backslash$nspectrum (Genuit, K., 1996, `` A New Approach to Objective Determination$\backslash$nof Noise Quality Based on Relative Parameters,{\{}''{\}} Proceedings of$\backslash$nInterNoise, Liverpool, UK), and a Fourier-based window deconvolution$\backslash$nmethod giving pure spectral lines regardless of signal-to-block$\backslash$nsynchronization and permitting multiplication of frequency resolution$\backslash$nfor a given block length and time resolution ( Sottek, R., 1993, ``$\backslash$nModelle zur Signalverarbeitung im menschlichen Gehor,{\{}''{\}} dissertation,$\backslash$nRWTH Aachen; Bray, W. R., 2004, `` Perceptually Related Analysis of$\backslash$nTime-Frequency Patterns via a Hearing Model ( Sottek), a$\backslash$nPattern-Measurement Algorithm ({\{}''{\}} Relative Approach{\{}''{\}}) and a$\backslash$nWindow-Deconvolution Algorithm,{\{}''{\}} 147th Meeting, New York, May,$\backslash$nAcoustical Society of America, 5aPPb7). Types of noise which$\backslash$nparticularly benefit from the techniques we will discuss include, but$\backslash$nare by no means limited to, time-varying emissions from information$\backslash$ntechnology devices (printers, hard disk drives, servosystems),$\backslash$nappliances, HVAC (compressors and controls), hydraulic systems including$\backslash$ndirect high-pressure fuel injection internal combustion engines, tonal$\backslash$norders from rotating machinery, and environmental noise in workplaces$\backslash$nand residences. The three analytic tools presented here are well suited$\backslash$nin matching the time-frequency, tonal, and pattern recognition$\backslash$ncapabilities of human hearing, and offer general engineering$\backslash$ncapabilities especially involving the fine time-structured behavior of$\backslash$ntransient and tonal events.},
  doi      = {10.1115/IMECE2006-14717},
  isbn     = {0-7918-4776-4},
  url      = {http://proceedings.asmedigitalcollection.asme.org/proceeding.aspx?articleid=1604462},
}

