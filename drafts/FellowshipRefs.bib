@Article{Steele2016Evaluation,
  author        = {Steele, Daniel and Bild, Edda and Guastavino, Catherine},
  journal       = {INTER-NOISE and NOISE-CON Congress and Conference Proceedings},
  title         = {Evaluation of an urban soundscape intervention with music: quantitative results from questionnaires},
  year          = {2016},
